# Use the official Python image
FROM python:3.10-slim

# Set working directory
WORKDIR /app

# Copy project files
COPY . /app

# Install dependencies
RUN pip install --no-cache-dir flask werkzeug pyngrok

# Expose the Flask port
EXPOSE 5000

# Set environment variable for Flask
ENV FLASK_APP=2.txt
ENV FLASK_RUN_HOST=0.0.0.0
ENV FLASK_ENV=production

# Initialize DB on container start (you can add a startup script for better practice)
RUN python3 -c "import sqlite3; sqlite3.connect('feedback_system.db').close()"

# Start the app
CMD ["python3", "2.txt"]
